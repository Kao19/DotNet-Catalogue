@model IEnumerable<Tshirt.Context.tableCommande>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutPage1.cshtml";
}




<!DOCTYPE html>
<html>
<head>
    <style>
        #table {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 60%;
            position: absolute;
            left: 20%;
            margin-left: -50px;
            top: 30%;
            margin-top: -50px;
        }

            #table td, #table th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #table tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #table tr:hover {
                background-color: #ddd;
            }

            #table th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: left;
                background-color: dimgrey;
                color: white;
            }
    </style>
</head>
<body>

    <br /><br />
    <h2 style="background-color: white; text-align: center;">Liste des Commandes</h2>
    <p style="text-align: center;">
        @Html.ActionLink("Create New", "Create")
    </p>

    <table id="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCmd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.etat)
            </th>

            <!--
    <th>
        @Html.DisplayNameFor(model => model.tableClient.nom)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.tableTshirt.taille)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.tableTshirt.couleur)
    </th>
        -->
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdCmd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.etat)
        </td>
        <!--
    <td>
        @Html.DisplayFor(modelItem => item.tableClient.nom)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.tableTshirt.taille)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.tableTshirt.couleur)
    </td>
        -->
        <td>
            <button style="background-color: greenyellow;">  @Html.ActionLink("Edit", "Edit", new { id = item.IdCmd }) </button>
            <button style="background-color: burlywood;">  @Html.ActionLink("Details", "Details", new { id = item.IdCmd }) </button>
            <button style="background-color: red;"> @Html.ActionLink("Delete", "Delete", new { id = item.IdCmd }) </button>
        </td>
    </tr>
        }

    </table>
</body>
</html>
